<h1><%= @list.title %></h1>
  <medium>
    <%= @list.description %>
  </medium>
</br>
</br>
<% if policy(@list).update? %>
<%= link_to "Edit Your List Title", edit_list_path, class: 'btn btn-success' %>
<% end %>
</br>
</br>
<div class="col-md-4">
  <% if policy(Task.new).create? %>
  <%= link_to "New Task", new_list_task_path(@list, @task), class: 'btn btn-success' %>
  <% end %>
</div>
</br>
</br>
<div class="row">
  <div class="col-md-8">
      <% @tasks.each do |task| %>
    <div class="media">
      <div class="media-body">
        <h4 class="media-heading">
          <%= link_to task.title, [@list, task] %>
        </h4>
      <% end %>
      </div>
    </div>
  </div>
</div>
